<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:background="@drawable/bg1">


    <TextView
        android:id="@+id/showText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="cursive"
        android:text="Biodata Diri"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />
    <ImageView
        android:foregroundGravity="center_horizontal"
        android:layout_below="@id/showText"
        android:id="@+id/img_foto"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/me" />

    <LinearLayout
        android:layout_below="@id/img_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_marginLeft="25dp"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#42A5F5"
                android:text="Nama Lengkap"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000" />
            <TextView
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="Rivalda Villadelfiya"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_marginLeft="25dp"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#42A5F5"
                android:text="NIM"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="A11.2016.09580"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_marginLeft="25dp"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#42A5F5"
                android:text="Alamat"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="Ds.Prambatan Kidul Rt.06/01 Kaliwungu Kudus"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_marginLeft="25dp"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#42A5F5"
                android:text="Hobi"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="Menulis"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_above="@id/btn_location"
        android:gravity="center"
        android:id="@+id/btn_phone"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_width="374dp"
        android:layout_height="25dp"
        android:layout_marginTop="125dp"
        android:background="#B39DDB"
        android:onClick="callnumber"
        android:text="Phone Number"
        android:textSize="10dp" />

    <Button
        android:layout_above="@id/btn_set_address"
        android:layout_width="374dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/btn_location"
        android:background="#E57373"
        android:onClick="showmap"
        android:text="Location"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btn_set_address"
        android:layout_width="374dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FF80AB"
        android:onClick="openurl"
        android:text="Site Address"
        android:textSize="10dp" />

</RelativeLayout>